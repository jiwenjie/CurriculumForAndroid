<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.9">

    <android.support.v7.widget.Toolbar
        android:id="@+id/display_toolbar"
        android:background="@color/alpha_10_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.root.curriculum.util.IconFontTextView
            android:text="@string/ic_return"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/title"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="图片显示"
            android:textSize="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_20"
        android:background="@color/color_lighter_gray"
        app:cardCornerRadius="@dimen/dp_10"
        android:layout_below="@id/display_toolbar"
        app:cardBackgroundColor="@color/alpha_25_black"
        >

        <ImageView
            android:id="@+id/display_image"
            android:background="@drawable/img_splash"
            android:layout_margin="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v7.widget.CardView>

</RelativeLayout>